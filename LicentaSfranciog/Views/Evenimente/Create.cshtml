@model LicentaSfranciog.Models.ViewModels.EventViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creare Eveniment Nou</h1>

<h4>Eveniment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="create-event">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Eveniment.Nume" class="control-label"></label>
                <input asp-for="Eveniment.Nume" class="form-control" />
                <span asp-validation-for="Eveniment.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Eveniment.Descriere" class="control-label"></label>
                <input asp-for="Eveniment.Descriere" class="form-control" />
                <span asp-validation-for="Eveniment.Descriere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Eveniment.StartTime" class="control-label"></label>
                <input asp-for="Eveniment.StartTime" class="form-control" />
                <span asp-validation-for="Eveniment.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Eveniment.EndTime" class="control-label"></label>
                <input asp-for="Eveniment.EndTime" class="form-control" />
                <span asp-validation-for="Eveniment.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Loc</label>
                @Html.DropDownList("Loc",Model.Loc , "Selectează un Loc", new {@class="form-control"})
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvare" class="btn btn-primary" />
                <a class="btn btn-outline-success" asp-action="Index">Inapoi la Evenimente</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
