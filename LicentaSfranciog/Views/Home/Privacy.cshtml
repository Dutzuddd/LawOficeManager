@{
    ViewData["Title"] = "Calendar Squedueller";
}

@*CALENDAR*@
<script>

    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            events: @Html.Raw(ViewData["Evenimente"]),
            resources: @Html.Raw(ViewData["Resources"]),
            headerToolbar: {
                left: 'today prev, next',
                center: 'title',
                right: 'timeGridWeek,dayGridMonth,listMonth'
            },
        });
        calendar.render();
    });

</script>

<div class="text-center">
    <h1 class="display-4">Pagina Agenda/Organizator</h1>
    <div id='calendar'></div>
</div>

<di class="row">
    <div class="col-md-6">
        <a href="/Evenimente"><h3>Events</h3></a>
    </div>
    <div class="col-md-6">
        <a href="/Locatii"><h3>Locations</h3></a>
    </div>
</di>
