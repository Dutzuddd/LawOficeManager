@model LicentaSfranciog.Models.ViewModels.FacturaViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Factură</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Factura.Pret" class="control-label"></label>
                <input asp-for="Factura.Pret" class="form-control" />
                <span asp-validation-for="Factura.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Factura.Data" class="control-label"></label>
                <input asp-for="Factura.Data" class="form-control" />
                <span asp-validation-for="Factura.Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Proces</label>
                @Html.DropDownList("Proces",Model.Proces , "Selectează un Proces", new {@class="form-control"})
            </div>
            <br />
            <div class="form-group">
                <label>Client</label>
                @Html.DropDownList("Client",Model.Client , "Selectează un Client", new {@class="form-control"})
            </div>
            <div class="form-group">
                <input type="submit" value="Salvează" class="btn btn-primary" />
                <a class="btn btn-outline-success" asp-action="Index">Înapoi la Facturi</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
