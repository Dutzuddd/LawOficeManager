@model LicentaSfranciog.Models.Raport

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Raport</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeProces)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeProces)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OreLucrate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OreLucrate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Facturat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Facturat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cheltuieli)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cheltuieli)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataRaport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataRaport)
        </dd>
    </dl>
</div>

<canvas id="barChart" width="500" height="400"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var ctx = document.getElementById('barChart').getContext('2d');
        var labels = ['Cheltuieli', 'OreLucrate', 'Facturat'];
        var values = [@Model.Cheltuieli, @Model.OreLucrate, @Model.Facturat];

        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Raport Proces',
                    data: values,
                    backgroundColor: 'rgba(0, 123, 255, 0.5)',
                    borderColor: 'rgba(0, 123, 255, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: false,
                maintainAspectRatio: false,               
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>

